{
  "name": "cat-pun",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "https://github.com/chocpanda/cat-pun",
  "bugs": "https://github.com/ChocPanda/cat-pun/issues",
  "author": "ChocPanda",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "commit": "git-cz",
    "bootstrap": "lerna bootstrap",
    "release": "semantic-release",
    "ci:init": "node scripts/ci-init",
    "lint": "lerna run lint --stream && eslint scripts/*",
    "lint:test": "lerna run lint:test --stream && eslint scripts/*",
    "lint:fix": "lerna run lint:fix --stream && eslint --fix scripts/*",
    "lint:report": "lerna run lint:report --stream && node scripts/merge-reports --reporter eslint",
    "test": "lerna run test --stream",
    "test:unit": "lerna run test:unit --stream",
    "test:cov": "lerna run test:cov --stream",
    "test:report": "lerna run test:report --stream"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "babel-eslint": "^10.0.1",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-vue": "^2.0.2",
    "eslint-config-xo": "^0.26.0",
    "eslint-plugin-ava": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-unicorn": "^9.0.0",
    "eslint-plugin-vue": "^5.2.2",
    "junit-report-merger": "^0.0.6",
    "lerna": "^3.14.1",
    "mkdirp": "^0.5.1",
    "prettier": "^1.17.1",
    "semantic-release": "^15.13.3",
    "yargs": "^13.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "xo": {
    "prettier": "true",
    "ignores": [
      "reports/**/*",
      ".nyc_output/**/*"
    ],
    "overrides": [
      {
        "files": [
          "**/*"
        ],
        "parserOptions": {
          "parser": "babel-eslint",
          "ecmaVersion": 2018,
          "sourceType": "module"
        }
      }
    ]
  }
}

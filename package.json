{
  "name": "cat-pun",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "https://github.com/chocpanda/cat-pun",
  "bugs": "https://github.com/ChocPanda/cat-pun/issues",
  "author": "ChocPanda",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "commit": "git-cz",
    "bootstrap": "lerna bootstrap",
    "release": "semantic-release",
    "lint": "lerna run lint --stream",
    "lint:test": "lerna run lint:test --stream",
    "lint:fix": "lerna run lint:fix --stream",
    "lint:report": "lerna run lint:report --stream",
    "test": "lerna run test --stream",
    "test:unit": "lerna run test:unit --stream",
    "test:cov": "lerna run test:cov --stream",
    "test:report": "lerna run test:report --stream"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "2.1.0",
    "lerna": "^3.14.1",
    "semantic-release": "^15.13.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "xo": {
    "prettier": "true",
    "ignores": [
      "reports/**/*",
      ".nyc_output/**/*"
    ],
    "overrides": [
      {
        "files": [
          "**/*"
        ],
        "parserOptions": {
          "parser": "babel-eslint",
          "ecmaVersion": 2018,
          "sourceType": "module"
        }
      }
    ]
  }
}

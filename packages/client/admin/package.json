{
	"name": "@cat-pun-ui/admin",
	"version": "0.0.1",
	"description": "Admin UI for Cat-Pun",
	"private": true,
	"repository": "https://github.com/chocpanda/cat-pun",
	"author": "ChocPanda",
	"license": "MIT",
	"scripts": {
		"serve": "vue-cli-service serve",
		"build": "vue-cli-service build",
		"lint": "xo .",
		"lint:test": "xo .",
		"lint:fix": "xo --fix .",
		"lint:report": "xo --format junit . > ./reports/xo/test-results.xml",
		"test": "nyc ava",
		"test:unit": "nyc ava",
		"test:cov": "nyc ava && nyc report",
		"test:report": "nyc ava --tap | tap-junit --output ./reports/ava --name test-results.xml"
	},
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^1.2.19",
		"@fortawesome/free-brands-svg-icons": "^5.9.0",
		"@fortawesome/free-regular-svg-icons": "^5.9.0",
		"@fortawesome/free-solid-svg-icons": "^5.9.0",
		"@fortawesome/vue-fontawesome": "^0.1.6",
		"buefy": "^0.7.7",
		"core-js": "^3.4.7",
		"vue": "^2.6.10",
		"vue-router": "^3.0.3",
		"vuex": "^3.0.1"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "^3.8.0",
		"@vue/cli-service": "^3.8.0",
		"ava": "^2.1.0",
		"browser-env": "^3.2.6",
		"eslint-config-xo-vue": "^2.0.0",
		"eslint-plugin-unicorn": "^9.1.1",
		"eslint-plugin-vue": "^5.2.3",
		"nyc": "^14.1.1",
		"tap-junit": "^3.1.0",
		"vue-template-compiler": "^2.6.10",
		"xo": "^0.24.0"
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	],
	"xo": {
		"extends": "xo-vue",
		"prettier": "true",
		"extensions": [
			"js",
			"vue"
		],
		"ignores": [
			"reports",
			"node_modules",
			".nyc_output"
		],
		"rules": {
			"import/no-unassigned-import": ["error", {
				"allow": ["**/*.css", "**/*.html"]
			}]
		}
	}
}
